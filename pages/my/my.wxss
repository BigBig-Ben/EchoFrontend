/* pages/my/my.wxss */
.infoView {
  height: 500rpx;
  overflow: hidden;
  background-color: #aaa2a2;
  position: relative;
  margin-bottom: 40rpx;
}

.bg {
  width: 100%;
  height: 100%;
  z-index: 1;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.shadow {
  width: 100%;
  height: 100%;
  z-index: 2;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000000;
  opacity: 0.4;
}

.content {
  width: 100%;
  height: 100%;
  z-index: 3;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.setBtn {
  margin-top: 20rpx;
  padding-right: 40rpx;
  text-align: right;
  color: #ffffff;
}

.infoDesc {
  margin-top: 40rpx;
  text-align: center;
  color: #ffffff;
}

.icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.motto {
  padding: 0 20% 0 20%; 
  margin-top: 40rpx;
}

.content {
  padding: 0 30rpx 0 30rpx;
}

.record {
  padding: 20rpx;
  border-bottom: solid 1rpx #cfcfcf;
}

.time_delete {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.time_delete image {
  width: 50rpx;
  height: 50rpx;
}

.imgs {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
}

.img {
  width: 100%;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.time {
  font-size: 24rpx;
  opacity: 0.5;
}

.desc {
  margin-top: 20rpx;
  font-size: 30rpx;
}

.tag_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  height: 46rpx;
  border: 2rpx solid #9f9f9f;
  border-radius: 23rpx;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 46rpx;
  padding: 0 10rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.modal {
  position:fixed;
  top:0;
  right:0; 
  bottom:0; 
  left:0; 
  z-index:1000;
}

.modal-cancel {
  position:absolute; 
  z-index:2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}

.bottom-dialog-body {
  width:100%; 
  position:absolute; 
  z-index:3000; 
  bottom:0; 
  left:0;
  background:#dfdede;
}

.bottom-positon {
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
}
 
.bottom-positon{
  text-align: center;
}
.Mselect{
  margin-bottom: 20rpx;
}
.Mselect view{
  padding: 26rpx 0;
  background: #fff;
}
.Mselect view:not(:last-of-type){
  border-bottom: 1px solid #dfdede;
}
.Mcancel{
  background: #fff;
  padding: 26rpx 0;
}